    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: conic-gradient(var(--primary), var(--secondary), var(--accent), var(--primary));
    border-radius: 50%;
    z-index: -1;
    animation: rotate 20s linear infinite;
    opacity: 0.5;
  }

  .profile-stats {
