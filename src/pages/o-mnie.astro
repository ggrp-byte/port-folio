    gap: var(--spacing-md);
  }

  .stat-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--spacing-sm);
    background: rgba(0, 255, 136, 0.1);
    border: 1px solid rgba(0, 255, 136, 0.3);
    border-radius: var(--radius);
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 900;
    color: var(--primary);
    font-family: var(--font-mono);
  }

